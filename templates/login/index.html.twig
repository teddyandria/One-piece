{% extends 'base.html.twig' %}


{% block title %}Se connecter
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="loginblock col-lg-4 col-sm-6 mx-auto mt-5 p-5">
			<h1 class="text-center text-dark fs-2">Se connecter</h1>
			<form class="d-flex flex-column" action="{{ path('app_login') }}" method="post">
				<div class="my-3 col-11 m-auto">
					<label class="form-label text-dark fw-bold fs-5" for="username">Email</label>
					<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
				</div>

				<div class="my-3 col-11 m-auto">
					<label class="form-label text-dark fw-bold fs-5" for="password">Password</label>
					<input type="password" id="password" class="form-control" name="_password">
				</div>
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				{# <input type="hidden" name="_target_path" value="/home"> #}
				<button class="btn btn-light col-lg-6 m-auto mb-3 mt-3 fw-bold fs-5" type="submit">Se connecter</button>
			</form>
		</div>
	</div>
{% endblock %}
