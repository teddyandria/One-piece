{% extends 'baseAdmin.html.twig' %}

{% block title %}Les pirates du Nouveau Monde
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('add_crew') }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="text-center">Liste des pirates</h1>
		<a class="btn btn-primary my-2" href="{{ path('app_admin_member_new') }}">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="mb-1 me-1 bi bi-plus" viewbox="0 0 16 16">
				<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
			</svg>Ajouter un pirate</a>

		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Age</th>
					<th>Equipage</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for member in members %}
					<tr class="fs-5">
						<td>{{ member.name }}</td>
						<td>{{ member.age }}</td>
						<td>{{ member.crew.name}}</td>
						<td class="d-flex gap-2">
							<a class="btn btn-primary" href="{{ path('app_admin_member_edit', {'id': member.id}) }}">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 me-2 bi bi-pencil" viewbox="0 0 16 16">
									<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
								</svg>Editer</a>
							{{ include('admin_member/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</div>
{% endblock %}
