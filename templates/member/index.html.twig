{% extends 'layout.html.twig' %}

{% block title %}Personnages
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('pirate') }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row row-cols-1 row-cols-md-2 gap-3 mx-auto mt-5">
			{% for member in members %}
				<div class="blockcard col-lg-4 col-sm-12 p-0 mb-4 position-relative mx-auto">
					<div class="position-absolute top-50 start-0 translate-middle">
						<img class="" src="{{ asset('build/images/' ~ member.photo) }}" alt=" card image cap" width="150" height="150">
					</div>
					<div class="text-light d-flex ms-5 my-2 text-center p-0 flex-column justify-content-between mx-4">
						<h5 class="text-dark mb-2 fs-2">{{member.name}}</h5>
						<p class="text-light mb-2 fs-5">Age :
							{{member.age}}
							ans</p>
						<a class="btn btn-primary col-lg-6 mx-auto" href="{{ path("crew_show", { crewName: member.crew.name }) }}">Equipage</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
