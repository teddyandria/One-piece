{% extends 'layout.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="loginblock col-lg-4 col-sm-6 mx-auto mt-5 p-5">
			<h1 class="text-center text-primary">Inscription</h1>
			{{ form_start(registrationForm) }}
			<div class="my-3 col-11 m-auto">
				{{ form_row(registrationForm.email, { 'attr': {'class': 'registration-input'} }) }}
			</div>
			<div class="my-3 col-11 m-auto">
				{{ form_row(registrationForm.plainPassword, { 'attr': {'class': ''} }) }}
			</div>
			<div class="d-flex justify-content-center">
				<button class="btn btn-primary col-lg-6 m-auto mb-3 mt-3 fw-bold fs-5 align-self-centers" type="submit">Valider</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
